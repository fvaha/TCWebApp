{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./backend/dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "rootDir": "./backend"
  },
  "include": [
    "backend/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}