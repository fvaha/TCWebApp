{
  "compilerOptions": {
    "outDir": "./dist/backend",
    "rootDir": "./backend",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "backend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}